<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.editarCliente">

    <include
        android:id="@+id/pEditartoolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgfotoClienteEdit"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"
                    android:layout_marginBottom="548dp"
                    app:srcCompat="@drawable/ic_menu_gallery" />

                <ImageButton
                    android:id="@+id/btnFotografiaEdit"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-560dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_button"
                    app:srcCompat="@drawable/ic_menu_camera" />

                <EditText
                    android:id="@+id/txtNombreEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_edit_text"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/txtRfcEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_edit_text"
                    android:ems="10"
                    android:hint="RFC"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/txtUsuarioEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_edit_text"
                    android:ems="10"
                    android:hint="IdUsuario"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/txtCorreoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_edit_text"
                    android:ems="10"
                    android:hint="Correo"
                    android:inputType="textEmailAddress"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/txtTelefonoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_edit_text"
                    android:ems="10"
                    android:hint="Telefono"
                    android:inputType="phone"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnGpsEdit"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/alfiler" />

                    <EditText
                        android:id="@+id/txtLatEdit"
                        android:layout_width="165dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/style_edit_text"
                        android:ems="10"
                        android:hint="Latitud"
                        android:inputType="textPersonName"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/txtLongEdit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/style_edit_text"
                        android:ems="10"
                        android:hint="Longitud"
                        android:inputType="textPersonName"
                        android:padding="10dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/txtDirEdit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_edit_text"
                    android:ems="10"
                    android:hint="DirecciÃ³n"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btnAEditarCliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/style_button"
                    android:text="Modificar Cliente"
                    android:textColor="#ffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnAEiminarCliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/style_button"
                    android:text="Eliminar Cliente"
                    android:textColor="#ffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
